@page "/BDocuments/CreateModal"
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Aqt.CoreFW.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Aqt.CoreFW.Web.Pages.BDocuments
@using Aqt.CoreFW.Components
@using Aqt.CoreFW.Web.Pages.Shared.ViewModels
@model CreateModalModel
@inject IHtmlLocalizer<CoreFWResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="BDocumentViewModel" asp-page="/BDocuments/CreateModal" id="CreateBDocumentForm">
    <abp-modal size="ExtraLarge">
        @* Tăng kích thước Modal để chứa nhiều thông tin hơn *@
        <abp-modal-header title="@L["NewBDocument"].Value (@(Model.ProcedureName ?? string.Empty))"></abp-modal-header>
        <abp-modal-body>
            @* === Input ẩn quan trọng === *@
            <input type="hidden" asp-for="BDocumentViewModel.ProcedureId" />
            <input type="hidden" asp-for="BDocumentViewModel.HiddenDataFormInput" />

            @* === Thông tin Chủ hồ sơ === *@
            <h5>@L["ApplicantInformation"]</h5>
            <abp-row>
                <abp-column size-md="_6"> <abp-input asp-for="BDocumentViewModel.ApplicantName" /> </abp-column>
                <abp-column size-md="_6"> <abp-input asp-for="BDocumentViewModel.ApplicantIdentityNumber" /> </abp-column>
            </abp-row>
            <abp-row>
                <abp-column size-md="_6"> <abp-input asp-for="BDocumentViewModel.ApplicantAddress" /> </abp-column>
                <abp-column size-md="_6"> <abp-input asp-for="BDocumentViewModel.ApplicantEmail" type="email" /> </abp-column>
            </abp-row>
            <abp-row>
                <abp-column size-md="_6"> <abp-input asp-for="BDocumentViewModel.ApplicantPhoneNumber" type="tel" /> </abp-column>
                <abp-column size-md="_6"></abp-column> @* Cột trống để căn chỉnh *@
            </abp-row>
            <hr />

            @* === Thông tin bổ sung === *@
            <h5>@L["AdditionalInformation"]</h5>
            <abp-input asp-for="BDocumentViewModel.ScopeOfActivity" /> @* TextArea sẽ tự động render nếu có attribute *@
            <abp-input asp-for="BDocumentViewModel.ReceiveByPost" /> @* Sẽ tự động render checkbox cho kiểu bool *@
            <hr />

            @* === Phần Các Form Động (Tờ khai,...) - Gọi Partial View === *@
            @* <h5>@L["DynamicForms"]</h5> *@ @* Tiêu đề chung cho các form *@
            @if (Model.BDocumentViewModel?.DataList != null)
            {
                for (int i = 0; i < Model.BDocumentViewModel.DataList.Count; i++)
                {
                    var dataItem = Model.BDocumentViewModel.DataList[i];
                    if (dataItem.ComponentType == ComponentType.Form) // Chỉ render nếu là Form
                    {
                        <h6 class="mt-3">@L[dataItem.ComponentName ?? "UnknownForm"] @(dataItem.IsRequired ? Html.Raw("<span class='text-danger ms-1'>*</span>") : Html.Raw(""))</h6>
                        @* Tạo ViewModel cho Partial View trực tiếp từ item trong list *@
                        var dynamicFormModel = new DynamicFormViewModel
                        {
                            FormDefinition = dataItem.FormDefinition ?? "{}",
                            FormData = dataItem.FormData,
                            InstanceId = $"form_{dataItem.ProcedureComponentId}", // Instance ID duy nhất cho form này
                            FormName = dataItem.ComponentName
                        };
                        @* Container riêng cho từng form động *@
                        <div id="DynamicFormContainer_@dynamicFormModel.InstanceId" class="dynamic-form-instance border p-3 mb-3" data-component-id="@dataItem.ProcedureComponentId" data-index="@i">
                            @* === Gọi Partial View Render Form Động === *@
                            @await Html.PartialAsync("~/Pages/Shared/Components/DynamicFormRenderer/_DynamicFormRenderer.cshtml", dynamicFormModel)
                        </div>
                        @* Input ẩn để JS lưu JSON vào ĐÚNG item trong list ViewModel cha *@
                        <input type="hidden" name="BDocumentViewModel.DataList[@i].FormData" id="hiddenFormData_@dynamicFormModel.InstanceId" />
                        @* Các input ẩn khác cho item này trong list (ProcedureComponentId và FileId rỗng) *@
                        <input type="hidden" name="BDocumentViewModel.DataList[@i].ProcedureComponentId" value="@dataItem.ProcedureComponentId" />
                        <input type="hidden" name="BDocumentViewModel.DataList[@i].ComponentType" value="@dataItem.ComponentType" />
                        <input type="hidden" name="BDocumentViewModel.DataList[@i].FileId" value="" /> @* FileId rỗng cho loại Form *@
                    }
                }
            }
            <hr />

            @* === Bảng Hồ sơ đính kèm === *@
            <h5>@L["AttachedDocuments"]</h5>
            <div class="table-responsive">
                <table class="table table-sm table-striped table-bordered" id="AttachedDocumentsTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;">STT</th>
                            <th>@L["DisplayName:BDocumentData.Component"]</th>
                            <th>@L["DisplayName:BDocumentData.AttachedFile"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.BDocumentViewModel?.DataList != null && Model.BDocumentViewModel.DataList.Any(item => item.ComponentType == ComponentType.File))
                        {
                            int attachmentIndex = 0; // Index riêng cho các attachment loại File
                            for (int i = 0; i < Model.BDocumentViewModel.DataList.Count; i++)
                            {
                                var dataItem = Model.BDocumentViewModel.DataList[i];
                                // var dataIndex = Model.GetComponentDataIndex(comp.Id); // --- KHÔNG CẦN TÌM INDEX NỮA ---
                                // if (dataIndex < 0) continue; // Bỏ qua nếu không tìm thấy (lỗi logic)

                                // Chỉ hiển thị các component loại FILE trong bảng này
                                if (dataItem.ComponentType == ComponentType.File)
                                {
                                    <tr>
                                        <td class="text-center">@(++attachmentIndex)</td>
                                        <td>
                                            @* Sử dụng thông tin từ dataItem *@
                                            @L[dataItem.ComponentName ?? ""] @(dataItem.IsRequired ? Html.Raw("<span class='text-danger ms-1'>*</span>") : Html.Raw(""))
                                            @if (!string.IsNullOrEmpty(dataItem.Description))
                                            {
                                                <small class="d-block text-muted fst-italic">@L[dataItem.Description]</small>
                                            } @* Localize Description *@
                                            @* Input ẩn để đảm bảo item này được gửi lên server, dùng index 'i' trực tiếp *@
                                            <input type="hidden" name="BDocumentViewModel.DataList[@i].ProcedureComponentId" value="@dataItem.ProcedureComponentId" />
                                            <input type="hidden" name="BDocumentViewModel.DataList[@i].FormData" value="" /> @* FormData rỗng cho loại File *@
                                        </td>
                                        <td>
                                            @* Container cho Upload Control *@
                                            <div class="input-group input-group-sm mb-1">
                                                <input type="file" class="form-control file-upload-input" id="fileInput_@dataItem.ProcedureComponentId"
                                                       data-target-hidden="#BDocumentViewModel_DataList_@(i)__FileId"
                                                       data-target-info="#fileInfo_@dataItem.ProcedureComponentId"
                                                       aria-label="@L["UploadFileFor", dataItem.ComponentName ?? ""]" />
                                            </div>
                                            @* Div hiển thị thông tin file đã upload/đang upload/lỗi *@
                                            <div id="fileInfo_@dataItem.ProcedureComponentId" class="mt-1 file-upload-info small"></div>
                                            @* Input ẩn để lưu FileId sau khi upload thành công, dùng index 'i' trực tiếp *@
                                            <input type="hidden" name="BDocumentViewModel.DataList[@i].FileId" id="BDocumentViewModel_DataList_@(i)__FileId" value="" />
                                            @* Link tải file mẫu (nếu có) *@
                                            @if (!string.IsNullOrEmpty(dataItem.TempPath))
                                            {
                                                <div class="mt-1 small">
                                                    <a href="#" class="download-template" data-path="@dataItem.TempPath" title="@L["DownloadTemplateTooltip"]">
                                                        <i class="fas fa-download me-1"></i>@L["DownloadTemplate"]
                                                    </a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr><td colspan="3" class="text-center text-muted">@L["NoAttachmentComponentsConfigured"]</td></tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-text text-danger small mt-2">@L["RequiredField"]</div>

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>